<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/colorPrimaryLight</item>
    </style>

    <style name="textview_standard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_standard</item>
    </style>

    <style name="textview_standard_land" parent="textview_standard">
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="button_standard">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="button_item">
        <item name="android:layout_width">@dimen/button_standard</item>
        <item name="android:layout_height">@dimen/button_standard</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="textview_standard_italic" parent="textview_standard">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="textview_standard_land_italic" parent="textview_standard_land">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="textview_noise_item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_standard</item>
    </style>

    <style name="textview_noise_item_duration">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>

</resources>
